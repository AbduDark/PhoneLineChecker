<Window x:Class="PhoneLinesApp.UI.Views.AddEditPhoneLineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add / Edit Phone Line"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="رقم الخط:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Width="200"
                 Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged,
                                ValidatesOnDataErrors=True}" />

        <Label Content="النوع:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Width="200"
                  ItemsSource="{StaticResource LineTypes}"
                  SelectedItem="{Binding LineType,
                                ValidatesOnDataErrors=True}" />

        <Label Content="آخر تفعيل:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
        <DatePicker Grid.Row="2" Grid.Column="1"
                    SelectedDate="{Binding LastActivationDate,
                                   ValidatesOnDataErrors=True}" />

        <Label Content="مفعّل؟" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
        <CheckBox Grid.Row="3" Grid.Column="1"
                  IsChecked="{Binding IsActive}" />

        <Label Content="ملاحظات:" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Height="60"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Text="{Binding Notes}" />

        <StackPanel Orientation="Horizontal"
                    Grid.Row="5" Grid.ColumnSpan="2"
                    HorizontalAlignment="Right"
                    Margin="0,